{
  "name": "thebedrockproject",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build:css": "npx tailwindcss -i ./src/assets/css/base.css -o ./src/assets/css/styles.css",
    "watch:css": "npx tailwindcss -i ./src/assets/css/base.css -o ./src/assets/css/styles.css --watch",
    "build:eleventy": "npx @11ty/eleventy",
    "watch:eleventy": "npx @11ty/eleventy --serve",
    "build": "npm run build:css && npm run build:eleventy",
    "start": "npm-run-all --parallel watch:css watch:eleventy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lracdim/thebedrockproject.git"
  },
  "keywords": [],
