  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/lracdim/thebedrockproject/issues"
  },
  "homepage": "https://github.com/lracdim/thebedrockproject#readme",
  "dependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@sanity/client": "^7.14.1",
    "dotenv": "^17.2.3",
    "fs": "^0.0.1-security",
    "gray-matter": "^4.0.3",
    "groq": "^5.7.0",
    "luxon": "^3.7.2"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "autoprefixer": "^10.4.24",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19"
  }
