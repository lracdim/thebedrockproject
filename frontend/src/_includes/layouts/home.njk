---

<!-- Hero -->
<div class="container mt-4 mb-16">
  <div class="bg-bg-dark bg-[url('/assets/img/hero-texture.jpg')] bg-cover bg-center text-white py-24 px-4 text-center rounded-lg shadow-xl relative overflow-hidden">
    <!-- Overlay for better text contrast if needed -->
    <div class="absolute inset-0 bg-black/40"></div>
    
    <div class="relative z-10 max-w-2xl mx-auto">
      <h1 class="font-serif text-5xl md:text-6xl mb-4 text-white font-semibold tracking-tight">Faith that survives pressure.</h1>
      <p class="text-lg text-white/80 mb-10 max-w-lg mx-auto font-sans leading-relaxed">Honest, durable theological essays for the modern soul. No hot takes, just solid ground.</p>
      <div class="flex justify-center gap-4">
        <a href="#essays" class="btn btn-primary px-8 py-3 text-base">Start Reading</a>
        <a href="/manifesto/" class="btn btn-outline-light px-8 py-3 text-base">Our Manifesto</a>
      </div>
    </div>
  </div>
</div>

<!-- Soul States -->
<section class="container mb-20">
  <div class="flex justify-between items-baseline mb-6 border-b border-border-subtle pb-2">
    <h2 class="text-3xl font-serif font-semibold m-0 text-text-charcoal">Browse by State of the Soul</h2>
    <a href="/soul-states/" class="text-sm font-semibold text-text-light hover:text-accent-blue transition-colors flex items-center gap-1">
      View Index 
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
    </a>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
    {% for state in sanity.states %}
    <a href="/content/states/{{ state.slug.current }}/" class="group block h-full">
      <div class="bg-white border border-border-subtle rounded-lg p-6 flex justify-between items-start h-full transition-all duration-300 hover:shadow-lg hover:border-accent-blue/30 group-hover:transform group-hover:scale-101">
        <div class="pr-4">
          <h4 class="font-serif text-xl mb-2 flex items-center gap-2 group-hover:text-accent-blue transition-colors">
            {% if state.icon == 'waves' %}â‰ˆ{% endif %}
            {% if state.icon == 'cloud' %}â˜{% endif %}
            {% if state.icon == 'battery' %}ğŸ”‹{% endif %}
            {% if state.icon == 'u-turn' %}â†º{% endif %}
            {{ state.title }}
          </h4>
          <p class="text-sm text-text-light leading-relaxed">{{ state.definition | truncate(80) }}</p>
        </div>
        <div class="w-16 h-16 rounded bg-gray-100 flex-shrink-0 overflow-hidden ml-4 flex items-center justify-center text-2xl text-text-light/50">
           <!-- Icon placeholder -->
           {% if state.icon == 'battery' %}ğŸ”‹{% else %}?{% endif %}
        </div>
      </div>
    </a>
    {% endfor %}
  </div>
</section>

<!-- Latest Essays -->
<section class="container mb-24" id="essays">
  <h2 class="text-3xl font-serif font-semibold mb-10 border-b border-border-subtle pb-4">Latest Bedrock Essays</h2>
  
  <div class="space-y-12">
    {% for essay in sanity.essays | slice(0, 3) %}
    <article class="pb-10 border-b border-border-subtle last:border-0 relative group">
      <div class="text-xs font-bold uppercase tracking-wider text-text-light mb-3 flex items-center gap-3">
        <span class="bg-gray-200 text-text-charcoal px-2 py-0.5 rounded text-[10px] uppercase tracking-wide">Pressure: {{ essay.pressure }}</span>
        <span>{{ essay.date | readableDate }}</span>
        <span class="w-1 h-1 bg-gray-400 rounded-full"></span>
        <span>By Rev. Dr. Stone</span>
      </div>
      <h3 class="font-serif text-3xl mb-3 leading-tight group-hover:text-accent-blue transition-colors">
        <a href="/content/essays/{{ essay.slug.current }}/">{{ essay.title }}</a>
      </h3>
      <p class="font-serif italic text-lg text-text-light">"{{ essay.thesis }}"</p>
    </article>
    {% endfor %}
  </div>

  <div class="mt-8 text-center md:text-left">
    <a href="/essays/" class="btn bg-white border border-border-subtle text-text-charcoal hover:border-accent-blue hover:text-accent-blue px-6 py-3">View Full Archive</a>
  </div>
</section>

